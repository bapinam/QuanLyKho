                success: function (msg) {
                    if (msg) {
                        show.style.display = 'none';
                        if (show.style.display == 'none' && showCard.style.display == 'none') {
                            btn.style.display = 'block';
                        }

                    } else {
                        show.style.display = 'block';
                        btn.style.display = 'none';
                    }
                },
                error: function (req, status, error) {

                }
            });

    }
</script>

