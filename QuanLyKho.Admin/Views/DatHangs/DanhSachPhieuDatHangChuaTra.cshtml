<section class="content">
    <!-- Default box -->
    <div class="card collapsed-box">
        <div class="card-header">
            <h3 class="card-title">Danh Sách Hóa Đơn Chưa Thanh Toán</h3>

            <div class="card-tools">
                <span title="Hóa Đơn" data-toggle="tooltip" data-placement="top" class="badge badge-warning" id="HoaDonCTT" style="float:left;">
                </span>
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="card-body" style="display: none;">

            <form id="frmHDCTT" method="get">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="NgayTKHDCT" name="ngayDuKien" placeholder="Chọn ngày tạo">
                                        <div class="input-group-append">
                                            <button type="button" onclick="resetLaiNgayHDCT()" class="btn btn-default" title="Không tìm kiếm theo ngày">
                                                <i class="fa fa-refresh"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="search" class="form-control" name="tuKhoa" id="tuKhoaHDCTT"
                                               placeholder="Nhập mã lưu trữ hoặc mã kế hoạch">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default" title="Tìm kiếm phiếu đặt hàng">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <table id="example25656" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã Lưu Trữ</th>
                        <th>Mã Kế Hoạch</th>
                        <th>Ngày Tạo</th>
                        <th>Người Tạo</th>
                        <th>Trạng Thái</th>
                        <th class="text-center ">Thao Tác</th>
                    </tr>
                </thead>
                <tbody id="dathangCTTShow">
                    <tr class="delete-datHangCTT text-center">
                        <td colspan="6">Không tìm thấy dữ liệu</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card-body -->
    <!-- /.card -->
</section>

